# Mod keys
set $mod Mod4
set $alt Mod1

# Change focus
bindsym $mod+Up focus up
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right
focus_follows_mouse no

# Move window
bindsym $alt+Shift+Up move up
bindsym $alt+Shift+Down move down
bindsym $alt+Shift+Left move left
bindsym $alt+Shift+Right move right

# Move window in layout
bindsym $mod+Shift+Up exec --no-startup-id i3l move up
bindsym $mod+Shift+Down exec --no-startup-id i3l move down
bindsym $mod+Shift+Left exec --no-startup-id i3l move left
bindsym $mod+Shift+Right exec --no-startup-id i3l move right

# Layouts
set $i3l spiral to workspace $ws1
set $i3l spiral to workspace $ws2
set $i3l spiral to workspace $ws3
set $i3l spiral to workspace $ws4
set $i3l spiral to workspace $ws5
set $i3l spiral to workspace $ws6
set $i3l spiral to workspace $ws7
set $i3l spiral to workspace $ws8
set $i3l spiral to workspace $ws9
exec --no-startup-id i3-layouts

# Resize window
bindsym $alt+Up resize grow height 10 px or 10 ppt
bindsym $alt+Down resize shrink height 10 px or 10 ppt
bindsym $alt+Left resize shrink width 10 px or 10 ppt
bindsym $alt+Right resize grow width 10 px or 10 ppt

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Kill window
bindsym $mod+q kill

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# Move window to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Move window to workspace and follow
bindsym $alt+Shift+1 move container to workspace number $ws1, workspace number $ws1
bindsym $alt+Shift+2 move container to workspace number $ws2, workspace number $ws2
bindsym $alt+Shift+3 move container to workspace number $ws3, workspace number $ws3
bindsym $alt+Shift+4 move container to workspace number $ws4, workspace number $ws4
bindsym $alt+Shift+5 move container to workspace number $ws5, workspace number $ws5
bindsym $alt+Shift+6 move container to workspace number $ws6, workspace number $ws6
bindsym $alt+Shift+7 move container to workspace number $ws7, workspace number $ws7
bindsym $alt+Shift+8 move container to workspace number $ws8, workspace number $ws8
bindsym $alt+Shift+9 move container to workspace number $ws9, workspace number $ws9

# Statusbar
bar {
    i3bar_command i3bar
    status_command i3status

    mode hide
    modifier $mod

    colors {
        background #000000
        separator #ffffff

        focused_workspace #ffffff #ffffff #000000
        active_workspace #ffffff #000000 #ffffff
        inactive_workspace #000000 #000000 #ffffff
    }
}

# Dmenu
bindsym $mod+d exec --no-startup-id dmenu_run -nb '#000000' -nf '#ffffff' -sb '#ffffff' -sf '#000000'

# Terminal
bindsym $mod+Return exec --no-startup-id alacritty

# Text editor
bindsym $mod+v exec --no-startup-id alacritty -e nvim

# File explorer
bindsym $mod+e exec --no-startup-id alacritty -e ranger

# Internet browser
bindsym $mod+b exec --no-startup-id google-chrome-stable

# Screenshot
bindsym Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# Wallpaper
exec --no-startup-id feh --no-fehbg --bg-fill '/home/doman/.wallpaper.png' 

# Font
font xft:HackNerdFont 8

# Borders and gaps
default_border pixel 0
default_floating_border pixel 0
gaps inner 10

# Compositor
exec --no-startup-id picom -b

# Keyboard layout
bindsym $mod+u exec --no-startup-id setxkbmap us
bindsym $mod+h exec --no-startup-id setxkbmap hu

# Touchpad
#exec --no-startup-id xinput set-prop "SYNA2BA6:00 06CB:CE2C Touchpad" "libinput Tapping Enabled" 1
#exec --no-startup-id xinput set-prop "SYNA2BA6:00 06CB:CE2C Touchpad" "libinput Natural Scrolling Enabled" 1

# Volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness control
#exec --no-startup-id brightnessctl set 40%
#bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
#bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-

# Monitor setup
exec --no-startup-id xrandr --output DP-2 --primary
exec --no-startup-id xrandr --output HDMI-1 --pos 1920x-600 --rotate left
#exec --no-startup-id xrandr --output eDP-1 --primary
