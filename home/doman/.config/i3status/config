# Appearance and update intervall
general {
    colors = false
    interval = 5
}

# Order
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

# CPU
cpu_usage {
    format = "CPU: %usage"
}

# RAM
memory {
    format = "RAM: %used"
}

# Internal drive
disk "/" {
    format = "DRIVE: %avail"
}

# Ethernet
ethernet _first_ {
    format_up = "E: %speed"
    format_down = "E: DOWN"
}

# Wi-Fi
wireless _first_ {
    format_up = "W: %essid-%quality"
    format_down = "W: DOWN"
}

# Volume
volume master {
    format = "VOL: %volume"
    format_muted = "VOL: MUTED"
    device = "default"
}

# Battery
battery all {
    format = "BAT: %status %percentage %remaining"
    format_down = "BAT: PSU"
}

# Time
tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}
